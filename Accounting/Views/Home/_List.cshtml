@model IEnumerable<Accounting.Models.ViewModels.AccountingViewModel>

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
            </tr>

            @foreach (var item in Model.Select((value, idx) => new { idx, value }))
            {
                <tr>
                    <td>@(item.idx + 1)</td>
                    <td>@item.value.Category</td>
                    <td>@(item.value.AccountingDate.ToString("yyyy-MM-dd"))</td>
                    <td>@item.value.Amount.ToString("N0")</td>
                </tr>
            }

        </table>
    </div>
</div>
